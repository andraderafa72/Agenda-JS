<%- include('includes/head'); %>
  <%- include('includes/nav'); %>

    <div class="container">
      <div class="row">

        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="display-4 text-center">Criar conta</h1>
          <p class="text-center lead">Crie agora mesmo uma conta para vocÃª!</p>

          <%- include('includes/messages') %>

            <div class="row">
              <div class="col-lg-2"></div>

              <div class="col-lg-8">

                <form class="my-3" action="/register/send" method="POST">

                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group">
                    <label>Nome</label>
                    <input type="text" class="form-control" name="nome" placeholder="Nome">
                  </div>
                  <div class="form-group">
                    <label>E-mail</label>
                    <input type="text" class="form-control" name="email" placeholder="E-mail">
                  </div>
                  <div class="form-group">
                    <label>Senha</label>
                    <input type="password" class="form-control" name="password" placeholder="Senha">
                  </div>

                  <div class="mx-auto my-4" style="width: 310px;">
                    <button type="submit" class="btn btn-primary" style="width: 150px;">Registrar-se</button>
                    <a href="/login/index" class="btn btn-outline-primary" style="width: 150px;">Entrar</a>
                  </div>

                </form>

              </div>

              <div class="col-lg-2"></div>

            </div>

            <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer') %>